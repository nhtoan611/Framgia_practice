<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("partial.header.sample"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("partial.header.home"), root_path %></li>
        <li><%= link_to t("partial.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("partial.header.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"} do %>
              <%= t "partial.header.account" %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("partial.header.profile"), current_user %></li>
              <li><%= link_to t("partial.header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("partial.header.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("partial.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
